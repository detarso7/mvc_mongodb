<h1>Produto: {{showProduct.name}}</h1>
<a href="/products">Voltar</a>

<div class="products">

        <div class="product">
            <img src="{{showProduct.image}}" alt="{{showProduct.name}}">
            <h4>Produto: {{showProduct.name}}</h4>
            <p>Preço: R${{showProduct.price}}</p>
            <p>Descrição: {{showProduct.description}}</p>
            <form action="/products/delete/{{showProduct._id}}" method="POST">
                <input type="submit" value="Exluir" class="btn">
            </form>
            <a href="/products/edit/{{showProduct._id}}">Editar</a>
        </div>

</div>